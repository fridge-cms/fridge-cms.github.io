.docs-nav
  position: fixed
  border-right: 1px solid #dce7ef
  padding: 1em
  min-height: 100%
  top: 0
  bottom: 0
  overflow-y: scroll

  a:link, a:visited
    color: #9199AA
    text-decoration: none

  a.active
    color: #0296ee

  ul
    list-style: none
    margin: 0.75rem 0 0 0

  ul li
    margin-bottom: 0.5rem

  .branding img
    height: 30px

.docs-nav-mobile
  padding: 1em
  border-bottom: 1px solid #dce7ef

  .branding
    display: inline-block
    margin: 0

    img
      margin: 0

  select
    float: right
    margin-top: 4px

.docs-section
  font-weight: 700
  margin: .5rem 0 0 0

  a:link, a:visited
    color: hsl(0,0%,20%)
  a.active
    color: #0296ee

.docs
  article
    padding: 2.5em
    max-width: 800px

