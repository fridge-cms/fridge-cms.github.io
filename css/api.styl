.api-docs
  min-height: 100%
  position: relative

.api-nav
  position: fixed
  border-right: 1px solid #dce7ef
  padding: 1em
  min-height: 100%
  overflow: hidden

  ul
    list-style: none
    margin: 0.75rem 0 0 0

.api-content
  color: #9199AA
  position: relative
  z-index: 30

  h1:first-child
    border-top: 0
    margin-top: 0

  h1
    border-top: 1px solid #dce7ef
    font-size: 1.875em
    padding-top: 1em
    padding-bottom: .5em
    margin-top: 2em
    margin-bottom: 21px

  h2
    font-size: 1.25em
    padding-top: 1.2em
    padding-bottom: 1.2em
    margin-top: 4em
    margin-bottom: 0

  h3, h4, h5, h6
    font-size: .75em
    margin-top: 2.5em
    margin-bottom: .8em
    text-transform: uppercase

  h1+h2
    margin-top: -21px

  h1, h2
    clear: both

  pre, blockquote
    background-color: #292929
    color: #fff
    padding: 2em 28px
    margin: 0
    clear: right
    text-shadow: 0 1px 2px rgba(0,0,0,.4)

  blockquote
    padding: 0 28px
    >p
      color: #ccc
      margin: 0

  code
    background-color: rgba(0,0,0,.05)
    padding: 3px
    border-radius: 3px

  table
    border-collapse: collapse
    border-spacing: 0
    margin-bottom: 1em
    overflow: auto
    width: auto

    td
      padding: 10px

    th
      padding: 5px 10px
      border-bottom: 1px solid #ccc
      vertical-align: bottom

    tr
      border-bottom: 1px solid #ccc

.api-code
  display: none
  width: 50%
  background-color: #292929
  position: absolute
  right: 0
  top: 0
  bottom: 0

  .lang-selector
    background: #393939
    border-bottom: 5px solid #292929
    position: absolute
    z-index: 50
    width: 100%

    a
      cursor: pointer
      display: block
      float: left
      color: #fff
      font-weight: bold
      text-decoration: none
      text-transform: uppercase
      padding: 0 10px
      line-height: 30px

      &.active
        background: #292929
        color: #fff

@media (min-width: 960px)
  .api-content
    >h1,>h2,>h3,>h4,>h5,>h6,>p,>table,>ul,>ol,>aside,>dl
      margin-right: 50%
      padding-left: 28px
      padding-right: 28px
      display: block
    pre, blockquote
      width: 50%
      float: right

  .api-code
    display: block
